//-----------------------------------------------------------------------------
//	GLOBAL
//-----------------------------------------------------------------------------

html {
	font-size: 62.5%; // 10px â€“ for easier `rem` calculations
}

body {
	font-size: 1.3rem;
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	background: url("../img/bg-pattern-gray.png");
}

// Conditional Content Loading with JavaScript (http://adactio.com/journal/5429/)
body:after {
	content: 'mobile';
	display: none;
}

* {
	box-sizing: border-box;
}

::selection {
	// background: #f56906;
	// color: #fefff8;
	text-shadow: none;
}

img::selection {
	background: transparent;
}

img {
	max-width: 100%;
}

fieldset {
	border: 0;
	margin: 0;
	padding: 0;
}

input[type="text"] {
	background: #ededed;
	border: 1px solid #999;
	box-shadow: inset 0 0.2rem 0.3rem #ccc;
	padding: 0.7rem;
	border-radius: 2px;
	display: block;
	overflow: hidden;
	width: 100%;
}

input[type="text"]:hover {
	border: 1px solid #666;
}

input[type="text"]:focus {
	border: 1px solid #333;
	background:white;
}

//-----------------------------------------------------------------------------
//	HEADER
//-----------------------------------------------------------------------------

.header {
	background: url("../img/bg-pattern-blue.png");
	text-align: center;
	height: 5rem;
	line-height: 5rem;

	a {
		color: #fff;
		text-decoration: none;
		font-size: 22px;
		font-weight: bold;
	}
}

//-----------------------------------------------------------------------------
//	DRILL
//-----------------------------------------------------------------------------

.drill {
	background: url("../img/bg-pattern-blue2.png");
	padding: 1rem;

	input, select {
		display: inline-block;
		min-width: 100%;
		margin-bottom: 2rem;
	}

	input {
		color: red;
	}

	legend {
		text-align: center;
		color: #fff;
		font-size: 1.4rem;
	}
}

//-----------------------------------------------------------------------------
//	SRP
//-----------------------------------------------------------------------------

.main {

	h1 {
		font-size: 1.4rem;
		font-weight: normal;
		color: #000;
	}

	.content {
		padding: 0px 0rem;
	}
}

.listing {
	position: relative;
	margin-bottom: 1rem;

	h2 {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		min-height: 4rem;
		line-height: 4rem;
		padding: 0 1rem;
		margin: 0;
		background: rgba(0, 0, 0, .75);
		color: #fff;
		font-size: 1.2rem;
		font-weight: normal;
	}

	img {
		display: block;
	}
}

