// Conditional Content Loading with JavaScript (http://adactio.com/journal/5429/)
body:after {
	content: 'mobile';
	display: none;
}

* {
	box-sizing: border-box;
}

::selection {
	// background: #f56906;
	// color: #fefff8;
	text-shadow: none;
}

img::selection {
	background: transparent;
}

img {
	max-width: 100%;
}

html {
	font-size: 62.5%; // 10px â€“ for easier `rem` calculations
}

body {
	font-size: 1.3rem;
}

//-----------------------------------------------------------------------------
//	HEADER
//-----------------------------------------------------------------------------

.header {
	background: url("../img/bg-pattern-blue.png");
	text-align: center;
	height: 5rem;
	line-height: 5rem;

	a {
		color: #fff;
		text-decoration: none;
		font-size: 22px;
		font-weight: bold;
	}
}

