//-----------------------------------------------------------------------------
//	GLOBAL
//-----------------------------------------------------------------------------

html {
	font-size: 62.5%; // 10px â€“ for easier `rem` calculations
}

body {
	font-size: 1.3rem;
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	background: url("../img/bg-pattern-gray.png");
}

// Conditional Content Loading with JavaScript (http://adactio.com/journal/5429/)
body:after {
	content: 'mobile';
	display: none;
}

* {
	box-sizing: border-box;
}

::selection {
	// background: #f56906;
	// color: #fefff8;
	text-shadow: none;
}

img::selection {
	background: transparent;
}

img {
	max-width: 100%;
}

//-----------------------------------------------------------------------------
//	HEADER
//-----------------------------------------------------------------------------

.header {
	background: url("../img/bg-pattern-blue.png");
	text-align: center;
	height: 5rem;
	line-height: 5rem;

	a {
		color: #fff;
		text-decoration: none;
		font-size: 22px;
		font-weight: bold;
	}
}

//-----------------------------------------------------------------------------
//	DRILL
//-----------------------------------------------------------------------------

.drill {
	background: url("../img/bg-pattern-blue2.png");
}

//-----------------------------------------------------------------------------
//	SRP
//-----------------------------------------------------------------------------

.main {

	h1 {
		font-size: 1.4rem;
		font-weight: normal;
		color: #000;
	}

	.content {
		padding: 0px 1rem;
	}
}

.listing {
	position: relative;
	margin-bottom: 1rem;

	h2 {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		min-height: 4rem;
		line-height: 4rem;
		padding: 0 1rem;
		margin: 0;
		background: rgba(0, 0, 0, .75);
		color: #fff;
		font-size: 1.2rem;
		font-weight: normal;
	}

	.listing img {
		display: block;
	}
}

aside {
	position: relative;
	margin-left:-20%;
	width:20%;
	display:block;
	float:left;
}

aside.drill {
	position: relative;
	margin-left:0%;
	width:20%;
	display:block;
	float:left;
	-webkit-transition: all 0.1s linear;
	-moz-transition: all 0.1s linear;
	-o-transition: all 0.1s linear;
	-ms-transition: all 0.1s linear;
	transition: all 0.1s linear;
}

//-----------------------------------------------------------------------------
//	DETAILS
//-----------------------------------------------------------------------------

.section {
	h2 {
		color:#669900;
		text-shadow: 0 0.1rem 0 white;
	}
}

/*
	Gallery
 */
#gallery {
	background: black;
	padding: 1rem;
	position:relative;
}

.swipe,
.swipe ul,
.swipe ul li {
	padding: 0;
	margin: 0;
}

.swipe li div {
  margin: 0;
  padding: 0;
  text-align: center;
}

.controls {
	border-top: 1px #3A4146 solid;
	background: -webkit-gradient(linear, left top, left bottom, from(#292F34), to(#23282C));
	background: -webkit-linear-gradient(top, #292F34, #23282C);
	background: -moz-linear-gradient(top, #292F34, #23282C);
	background: -ms-linear-gradient(top, #292F34, #23282C);
	background: -o-linear-gradient(top, #292F34, #23282C);
	background: linear-gradient(top, #292F34, #23282C);
	height: 35px;
	position: relative;
	bottom:0px;
}

.prev {
	border-right: 1px #232628 solid;
	display: inline-block;
	text-decoration: none;
	position:absolute;
	left: 0;
	top: 0;
}

.prev em {
	display: block;
	border-right: 1px #30373C solid;
	padding: 10px 13px 8px;
	font-style: normal;
	font-weight: bold;
	font-size: 11px;
	text-transform: uppercase;
	color: #697279;
	letter-spacing: 1px;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, .35);
}

.next {
	border-left: 1px #232628 solid;
	display: inline-block;
	text-decoration: none;
	position: absolute;
	right: 0;
	top: 0;
}

.next em {
	display: block;
	border-left: 1px #30373C solid;
	padding: 10px 13px 8px;
	font-style: normal;
	font-weight: bold;
	font-size: 11px;
	text-transform: uppercase;
	color: #697279;
	letter-spacing: 1px;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, .35);
}

.current-slide {
	text-align: center;
	font-size: 2rem;
	line-height: 1.3;
	color: #697279;
	display: block;
	position: relative;
	top: 0.5rem;
	left: 50%;
	margin-left: -75px;
	width: 150px;
}

.current-slide em {
	display: inline-block;
	font-style: normal;
}

.current-slide em.on {
	color: white;
}


//-----------------------------------------------------------------------------
//	FOOTER
//-----------------------------------------------------------------------------

.footer {
	padding: 0 1rem;
	clear: both;
}