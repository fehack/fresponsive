	text-shadow: none;
}

img::selection {
	background: transparent;
}

img {
	max-width: 100%;
}

html {
	font-size: 62.5%; // 10px â€“ for easier `rem` calculations
}

body {
	font-size: 1.3rem;
}

aside {
	position: relative;
	margin-left:-20%;
	width:20%;
	display:block;
	float:left;
}

aside.drill {
	position: relative;
	margin-left:0%;
	width:20%;
	display:block;
	float:left;
	-webkit-transition: all 0.1s linear;
	-moz-transition: all 0.1s linear;
	-o-transition: all 0.1s linear;
	-ms-transition: all 0.1s linear;
	transition: all 0.1s linear;
}


