//-----------------------------------------------------------------------------
//	SRP
//-----------------------------------------------------------------------------

.main {
	padding: 0 1rem;

	h1 {
		font-size: 1.4rem;
		font-weight: normal;
		color: #000;
	}
}

.listing {
	position: relative;
	margin-bottom: 1rem;

	h2 {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		min-height: 4rem;
		line-height: 4rem;
		padding: 0 1rem;
		margin: 0;
		background: rgba(0, 0, 0, .75);
		color: #fff;
		font-size: 1.2rem;
		font-weight: normal;
	}

	.listing img {
		display: block;
	}
}

aside {
	position: relative;
	margin-left:-20%;
	width:20%;
	display:block;
	float:left;
}

aside.drill {
	position: relative;
	margin-left:0%;
	width:20%;
	display:block;
	float:left;
	-webkit-transition: all 0.1s linear;
	-moz-transition: all 0.1s linear;
	-o-transition: all 0.1s linear;
	-ms-transition: all 0.1s linear;
	transition: all 0.1s linear;
}

